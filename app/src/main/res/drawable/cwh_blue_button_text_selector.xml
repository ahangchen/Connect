<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下的状态 -->
    <item android:state_enabled="true" android:state_pressed="true" android:color="@color/light_blue" />
    <!-- 选中的状态 -->
    <item android:state_enabled="true" android:state_focused="true" android:color="@color/light_blue" />

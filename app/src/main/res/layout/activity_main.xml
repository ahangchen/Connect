<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_blue"
        android:id="@+id/barRelativeLayout">


        <Button

            android:id="@+id/bt_group"
            android:layout_width="40dp"
            android:layout_height="40dp"
            style="@style/simple_bar_left_button"
            android:textStyle="bold"
            android:background="@drawable/group110"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            style="@style/simple_title"
            android:id="@+id/title"
            android:layout_centerHorizontal="true"/>

        <Button

            android:id="@+id/bt_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            style="@style/simple_bar_right_button"
            android:textStyle="bold"
            android:background="@drawable/add110"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal"
        android:background="@color/my_dark_grey">


        <Button
            android:id="@+id/bt_search"
            android:text="search"
            style="@style/input_button"

            />
    </LinearLayout>

    <LinearLayout style="@style/simple_green_button_background">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/vertical_margin"
            android:layout_gravity="center_vertical"
            android:background="@drawable/info50"/>

        <Button
            android:id="@+id/bt_me"
            style="@style/simple_green_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/my_information"/>
    </LinearLayout>
    //list

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/search_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:scrollbars="none"
            android:divider="@null"
            android:dividerHeight="1dp"

            />

        <ListView
            android:id="@+id/my_list_view"
            android:layout_width="30dip"
            android:visibility="gone"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@color/white"/>
    </RelativeLayout>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/bt_menu"
        android:text="menu"
        android:visibility="gone"/>

</LinearLayout>
